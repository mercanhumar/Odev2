<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:TestAssignment"
       x:Class="TestAssignment.AppShell">

    <!-- Menü Öğeleri -->
    <FlyoutItem Title="Ana Sayfa">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Kredi Hesaplama">
        <ShellContent ContentTemplate="{DataTemplate local:KrediHesapla}" />
    </FlyoutItem>

    <FlyoutItem Title="Vücut Kitle Hesaplama">
        <ShellContent ContentTemplate="{DataTemplate local:VucutKitleIndexi}" />
    </FlyoutItem>

    <FlyoutItem Title="Renk Seçici">
        <ShellContent ContentTemplate="{DataTemplate local:RenkSecici}" />
    </FlyoutItem>

    <FlyoutItem Title="Notlar">
        <ShellContent ContentTemplate="{DataTemplate local:ToDoList}" />
    </FlyoutItem>


</Shell>
